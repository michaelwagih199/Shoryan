<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
  >

    <ImageView
        android:id="@+id/iv_shoryan_haya2"
        android:layout_width="374dp"
        android:layout_height="169dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/shoryan_haya"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="8dp"
        android:layout_marginRight="@dimen/dimen16"
        android:layout_marginLeft="@dimen/dimen16"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_shoryan_haya2">


        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_shadow"
            android:hint="الايميل"
            android:inputType="textEmailAddress"
            android:padding="16dp" />

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_shadow"
            android:hint="كلمة السر"
            android:layout_marginTop="@dimen/dimen8"
            android:inputType="textPassword"
            android:padding="16dp" />

        <EditText
            android:id="@+id/et_comfirmPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen8"
            android:background="@drawable/edittext_shadow"
            android:hint="اعادة كلمة السر"
            android:inputType="textPassword"
            android:padding="16dp" />

        <Button
            android:id="@+id/buttonSignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen8"
            android:background="@drawable/ic_rounded_button"
            android:drawableRight="@drawable/ic_navigate_next"
            android:text="   تسجيل            "
            android:textColor="@color/White"
            android:textSize="25dp"
            android:textStyle="bold" />

        <com.google.android.gms.common.SignInButton
            android:id="@+id/googelSignIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen8"
        >

        </com.google.android.gms.common.SignInButton>

    </LinearLayout>



</android.support.constraint.ConstraintLayout>