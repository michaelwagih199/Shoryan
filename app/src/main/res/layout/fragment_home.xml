<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_first"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeFragment"
    android:background="@color/White">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_rounded_transparent"
                android:gravity="center"
                android:textSize="25sp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="@dimen/dimen16"
                android:layout_marginLeft="@dimen/dimen16"
                android:padding="@dimen/dimen8"
                android:text="الصفحة الرئيسية"
                android:textColor="@color/Pink"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_add_donor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/add_donner"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/dimen16"
                    android:layout_marginRight="@dimen/dimen16"/>
                <ImageView
                    android:id="@+id/iv_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/donner_search"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/dimen16"
                    android:layout_marginRight="@dimen/dimen16"/>

                <ImageView
                    android:id="@+id/iv_banks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen16"
                    android:layout_marginRight="@dimen/dimen16"
                    android:layout_weight="1"
                    android:src="@drawable/blood_bank" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen16"
                    android:layout_marginRight="@dimen/dimen16"
                    android:layout_weight="1"
                    android:src="@drawable/important_info" />
                <ImageView
                    android:id="@+id/iv_contact_us"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/contact_us"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/dimen16"
                    android:layout_marginRight="@dimen/dimen16"/>

                <ImageView
                    android:id="@+id/iv_we"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen16"
                    android:layout_marginRight="@dimen/dimen16"
                    android:layout_weight="1"
                    android:src="@drawable/about_us" />
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:layout_marginTop="@dimen/dimen16"
                app:srcCompat="@drawable/main_home" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>