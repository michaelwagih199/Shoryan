<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/dimen16"
    android:orientation="vertical"
    tools:context=".inhomefragments.AddDonorFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="اضافة متبرع"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="@dimen/dimen20" />

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="@dimen/dimen8"
                android:layout_marginRight="16dp"
                android:background="@drawable/ic_rounded_transparent"
                android:hint="الاسم"
                android:minHeight="@dimen/dimen50"
                android:paddingStart="@dimen/dimen32"
                android:paddingEnd="@dimen/dimen32"
                android:textColorHint="@color/Red" />

            <EditText
                android:id="@+id/et_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen16"
                android:layout_marginTop="@dimen/dimen8"
                android:layout_marginRight="@dimen/dimen16"
                android:background="@drawable/ic_rounded_transparent"
                android:foregroundGravity="center"
                android:hint="رقم الموبيل"
                android:inputType="phone"
                android:minHeight="@dimen/dimen50"
                android:paddingStart="@dimen/dimen32"
                android:paddingEnd="@dimen/dimen32"
                android:textColorHint="@color/Red" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="النوع"
                android:textColor="@color/colorAccentDark"
                android:textSize="@dimen/dimen16" />
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen16"
                android:layout_marginTop="@dimen/dimen16"
                android:layout_marginRight="@dimen/dimen16"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioBtn_male"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="ذكر"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccentDark"
                    android:textSize="16dp" />

                <RadioButton
                    android:id="@+id/radioBtn_female"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="انثى"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccentDark"
                    android:textSize="16dp" />
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="الوقت المتاح"
                android:textColor="@color/colorAccentDark"
                android:textSize="@dimen/dimen16" />

            <CalendarView
                android:id="@+id/calendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
            </CalendarView>

            <TextView
                android:id="@+id/txtVdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/colorAccentDark"
                android:textSize="@dimen/dimen16" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="نوع المتبرع"
                android:textColor="@color/colorAccentDark"
                android:textSize="@dimen/dimen16" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen16"
                android:layout_marginTop="@dimen/dimen8"
                android:layout_marginRight="@dimen/dimen16"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioBtn_paymentFree"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="مجانى"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccentDark"
                    android:textSize="16dp" />

                <RadioButton
                    android:id="@+id/radioBtn_paymentPaid"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="بمقابل مادى"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccentDark"
                    android:textSize="16dp" />
            </RadioGroup>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="فصيلة الدم"
                android:textColor="@color/colorAccentDark"
                android:textSize="@dimen/dimen16" />
            <Spinner
                android:id="@+id/spinnerBloodType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen16"
                android:layout_marginTop="@dimen/dimen8"
                android:layout_marginRight="@dimen/dimen16"
                android:background="@drawable/ic_rounded_button"
                android:padding="@dimen/dimen16"
                android:textAlignment="center"
                android:entries="@array/blood_type"
                android:prompt="@string/bloodType_prompt"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen8"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_upload_file"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/ic_rounded_transparent"
                    android:text="اختيار ملف"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button"
                    android:textColor="@color/Red"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_save_file"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/ic_rounded_transparent"
                    android:text="حفظ الملف"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button"
                    android:textColor="@color/Red"
                    android:textStyle="bold" />
            </LinearLayout>
            <Button
                android:id="@+id/btn_send"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen8"
                android:layout_marginTop="@dimen/dimen8"
                android:layout_marginRight="@dimen/dimen8"
                android:background="@drawable/ic_rounded_button_green"
                android:text="إرسال"
                android:textSize="@dimen/dimen20"
                android:textColor="@color/White"
                android:textStyle="bold" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>